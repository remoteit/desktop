{
  "name": "root",
  "private": true,
  "scripts": {
    "start:app-account": "yarn workspace @remote/account start",
    "start:app-frontend-desktop": "yarn workspace @remote/frontend-desktop start",
    "test": "FORCE_COLOR=true lerna run lint && CI=true FORCE_COLOR=true lerna run test -- --coverage"
  },
  "workspaces": {
    "packages": [
      "account",
      "frontend"
    ],
    "nohoist": [
      "**/babel-loader",
      "**/babel-jest"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-eslint": "^10.1.0",
    "eslint": "7.11.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-flowtype": "^4.5.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.0.6",
    "jest": "26.6.0",
    "jest-prop-type-error": "^1.1.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "webpack": "4.44.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/setupTests.{js,jsx,ts,tsx}",
      "!src/index.{js,jsx,ts,tsx}",
      "!src/serviceWorker.{js,jsx,ts,tsx}",
      "!src/**/*.(spec|test|stories).{js,jsx,ts,tsx}"
    ]
  }
}
