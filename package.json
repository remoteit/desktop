{
  "name": "remote.it",
  "version": "1.0.0",
  "description": "remote.it desktop client application",
  "author": "remot3.it, Inc",
  "main": "build/src",
  "scripts": {
    "build": "npm-run-all -s clean build-main move-*",
    "build-main": "tsc",
    "prepackage": "npm run build",
    "package": "electron-builder",
    "clean": "rimraf build dist",
    "move-cert": "mkdir -p build/src && cp -R src/cert build/src/cert",
    "move-connectd": "cp src/models/connectd build/src/models/connectd",
    "move-html": "mkdir -p build/src && cp src/index.html build/src/index.html",
    "move-images": "mkdir -p build/src/images && cp src/images/* build/src/images",
    "server": "DEBUG_COLORS=1 FORCE_COLOR=1 onchange -i -k 'src/**/*.ts' -- ts-node src",
    "prestart": "npm-run-all move-connectd build",
    "start": "DEBUG_COLORS=1 FORCE_COLOR=1 npm-run-all -l -p start-*",
    "start-html": "onchange -i -k 'src/**/*.(html)' -- npm run move-html",
    "start-certs": "onchange -i -k 'src/cert/**/*' -- npm run move-cert",
    "start-images": "onchange -i -k 'src/images/**/*' -- npm run move-images",
    "start-electron": "onchange -i -k 'src/**/*.(ts|html)' -- electron .",
    "start-compile": "tsc --watch",
    "test": "npm-run-all -p test-unit tests-e2e",
    "test-unit": "jest tests/unit",
    "test-e2e": "wait-on https://desktop.rt3.io && jest tests/e2e"
  },
  "dependencies": {
    "@feathersjs/express": "1.3.1",
    "@feathersjs/feathers": "3.3.1",
    "@feathersjs/socketio": "3.2.9",
    "cors": "2.8.5",
    "debug": "4.1.1",
    "electron-is-dev": "1.0.1",
    "express": "4.16.4",
    "feathers-memory": "3.0.1",
    "hazardous": "0.3.0",
    "helmet": "3.15.0",
    "http-proxy": "1.17.0",
    "node-netstat": "1.5.0",
    "portfinder": "1.0.20",
    "serve": "10.1.1",
    "socket.io": "2.2.0",
    "socket.io-client": "2.2.0",
    "supports-color": "6.1.0",
    "universal-analytics": "0.4.20",
    "winston": "3.1.0"
  },
  "devDependencies": {
    "@types/cors": "2.8.4",
    "@types/debug": "0.0.31",
    "@types/dotenv": "6.1.0",
    "@types/electron-is-dev": "0.3.0",
    "@types/express": "4.16.0",
    "@types/feathersjs__errors": "3.2.1",
    "@types/feathersjs__express": "1.1.4",
    "@types/feathersjs__feathers": "3.1.1",
    "@types/feathersjs__socket-commons": "3.1.2",
    "@types/feathersjs__socketio": "3.0.3",
    "@types/helmet": "0.0.42",
    "@types/http-proxy": "1.16.2",
    "@types/jest": "23.3.13",
    "@types/lodash": "4.14.120",
    "@types/socket.io": "2.1.2",
    "@types/socket.io-client": "1.4.32",
    "@types/universal-analytics": "0.4.2",
    "concurrently": "4.1.0",
    "dotenv": "6.2.0",
    "electron": "4.0.1",
    "electron-builder": "20.38.4",
    "electron-reload": "1.4.0",
    "jest": "23.6.0",
    "npm-run-all": "4.1.5",
    "onchange": "5.2.0",
    "prettier": "1.15.3",
    "rimraf": "2.6.3",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tsc": "1.20150623.0",
    "tslint": "5.12.0",
    "typescript": "3.2.2",
    "wait-on": "3.2.0"
  },
  "build": {
    "appId": "com.remoteit.desktop",
    "copyright": "remot3.it, Inc",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "private": true
}
