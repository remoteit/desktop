{
  "name": "remote.it",
  "version": "1.0.0",
  "description": "remote.it desktop client application",
  "author": "remot3.it, Inc",
  "main": "build/main-process/index.js",
  "scripts": {
    "build": "npm-run-all -p build-main build-render",
    "build-main": "cd main-process && tsc",
    "build-render": "cd render-process && npm run build",
    "clean": "rimraf build dist render-process/www",
    "preelectron": "npm run move-cert",
    "electron": "wait-on http://localhost:3333 && onchange -i -k '**/*.ts' -- electron .",
    "move-cert": "cp -R cert build/cert",
    "prepack": "npm run build",
    "pack": "electron-builder",
    "start": "npm-run-all -p start-main start-render electron",
    "start-main": "cd main-process && tsc --watch",
    "start-render": "cd render-process && npm start -- --no-open"
  },
  "dependencies": {
    "cors": "2.8.5",
    "electron-is-dev": "1.0.1",
    "express": "4.16.4",
    "node-netstat": "1.5.0",
    "socket.io": "2.2.0",
    "socket.io-client": "2.2.0"
  },
  "devDependencies": {
    "@types/cors": "2.8.4",
    "@types/electron-is-dev": "0.3.0",
    "@types/express": "4.16.0",
    "@types/socket.io": "2.1.2",
    "@types/socket.io-client": "1.4.32",
    "concurrently": "4.1.0",
    "electron": "4.0.1",
    "electron-builder": "20.38.4",
    "electron-reload": "1.4.0",
    "npm-run-all": "4.1.5",
    "onchange": "5.2.0",
    "prettier": "1.15.3",
    "rimraf": "2.6.3",
    "ts-node": "7.0.1",
    "tsc": "1.20150623.0",
    "tslint": "5.12.0",
    "typescript": "3.2.2",
    "wait-on": "3.2.0"
  },
  "build": {
    "appId": "com.remoteit.desktop",
    "copyright": "remot3.it, Inc",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "private": true
}
