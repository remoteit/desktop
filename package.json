{
  "name": "remoteit",
  "version": "3.24.0-beta.4",
  "private": true,
  "main": "build/index.js",
  "description": "Remote.It cross platform desktop application for creating and hosting connections",
  "workspaces": [
    "backend",
    "electron",
    "frontend"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s copy-env build-electron",
    "build-backend": "cd backend && npm run build",
    "build-dev": "cross-env NODE_ENV=development run-s copy-env build-electron-dev",
    "build-electron-dev": "cd electron && npm run build-dev",
    "build-electron": "cd electron && npm run build",
    "build-frontend": "cd frontend && npm run build",
    "build-mobile": "cross-env NODE_ENV=production run-s build-frontend mobile-sync",
    "copy-env": "cp .env frontend/ && cp .env backend/ && cp .env electron/",
    "frontend": "npm start -w=frontend",
    "install-binaries": "cd electron/ && sh ./scripts/build.sh",
    "install-electron": "cd electron/ electron-builder install-app-deps",
    "mobile-android": "cross-env NODE_ENV=development run-s mobile-sync mobile-run-android",
    "mobile-ios": "cross-env NODE_ENV=development run-s mobile-sync mobile-run-ios",
    "mobile-run-android": "npx cap run android",
    "mobile-run-ios": "npx cap run ios --target=\"7BBB57E2-D942-4D1B-9794-24258E41F79B\"",
    "mobile-sync": "npx cap sync",
    "open-android": "npx cap open android",
    "open-ios": "npx cap open ios",
    "postinstall": "run-s install-*",
    "start": "npm start -w=electron",
    "test-watch": "cd backend && npm run test-watch",
    "test": "cd backend && npm run test",
    "version": "npm version $npm_package_version --workspaces && sh scripts/version.sh $npm_package_version",
    "watch-backend": "cd backend && npm run watch",
    "watch-build": "tsc --watch",
    "watch-electron": "sleep 6 && onchange -i -k 'build/**/*' 'backend/build/**/*' -- npm run electron",
    "watch-images": "onchange 'src/images/**/*' -- npm run copy-images"
  },
  "dependencies": {
    "@capacitor/android": "^5.5.1",
    "@capacitor/app": "^5.0.6",
    "@capacitor/assets": "^3.0.1",
    "@capacitor/browser": "^5.1.0",
    "@capacitor/cli": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/ios": "^5.5.1",
    "@capacitor/splash-screen": "^5.0.6",
    "capacitor-plugin-safe-area": "^2.0.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "npm-run-all": "4.1.5",
    "onchange": "^7.1.0",
    "typescript": "^5.2.2"
  },
  "homepage": "https://app.remote.it",
  "repository": {
    "url": "git+ssh://git@github.com/remoteit/desktop.git",
    "type": "git"
  },
  "license": "MIT",
  "author": {
    "name": "Remote.It",
    "email": "support@remote.it"
  }
}
