{
  "name": "remoteit-capacitor",
  "version": "3.43.1",
  "private": true,
  "description": "Remote.It cross platform desktop application for creating and hosting connections",
  "workspaces": [
    "electron",
    "frontend",
    "common"
  ],
  "scripts": {
    "brand-web": "bash ./scripts/brand-web.sh",
    "brand-electron": "bash ./scripts/brand-electron.sh",
    "brand-android": "bash ./scripts/brand-android.sh",
    "brand-ios": "bash ./scripts/brand-ios.sh",
    "brand-all": "bash ./scripts/brand-all.sh",
    "build-frontend": "npm run brand-web && npm run build -w=frontend",
    "build-electron": "echo 'Electron must be built from the /electron directory'",
    "build-mobile": "npm run brand-android && npm run brand-ios && cross-env NODE_ENV=production run-s build-frontend mobile-sync",
    "copy-env": "[ -f .env ] && cp .env frontend/ && cp .env electron/ || true",
    "electron": "npm run brand-electron && npm run start -w=electron",
    "android": "npm run brand-android && cross-env NODE_ENV=development npx cap run android",
    "ios": "npm run brand-ios && cross-env NODE_ENV=development npx cap run ios",
    "mobile-sync": "npx cap sync",
    "mobile-sync-dev": "cross-env NODE_ENV=development npx cap sync",
    "open-android": "npx cap open android",
    "open-ios": "npx cap open ios",
    "postinstall": "npm run copy-env && npm run brand-web",
    "install-electron": "npm run build-frontend && npm install --workspace=electron",
    "start": "npm run brand-web && npm start -w=frontend",
    "test-watch": "npm run test-watch -w=electron",
    "test": "npm run test -w=electron",
    "version": "npm version $npm_package_version --workspaces && sh version.sh $npm_package_version"
  },
  "dependencies": {
    "@capacitor-community/bluetooth-le": "^7.1.1",
    "@capacitor/android": "^7.4.2",
    "@capacitor/app": "^7.0.1",
    "@capacitor/app-launcher": "^7.0.1",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/browser": "^7.0.1",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/clipboard": "^7.0.1",
    "@capacitor/core": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@capacitor/splash-screen": "^7.0.1",
    "@capacitor/status-bar": "^7.0.1",
    "capacitor-plugin-safe-area": "^4.0.0"
  },
  "devDependencies": {
    "color": "^5.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "npm-run-all": "4.1.5",
    "onchange": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "resolutions": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1"
  }
}
