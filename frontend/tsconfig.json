// frontend
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "target": "ESNext",
    "paths": {
      "@common/*": ["common/src/*"]
    }
  },
  "references": [{ "path": "../common" }],
  "include": ["src/**/*", "../types.d.ts"]
}
