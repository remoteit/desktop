{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["esnext"],
    "module": "commonjs",
    // "module": "esnext",
    "moduleResolution": "node",
    // "noEmit": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "rootDirs": ["."],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["src", "../types.d.ts"]
}
