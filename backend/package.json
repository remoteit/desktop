{
  "name": "remoteit-desktop-backend",
  "version": "2.3.9",
  "private": true,
  "main": "build/index.js",
  "scripts": {
    "build": "NODE_ENV=production run-s clean compile copy-* build-*",
    "copy-images": "cp -R ./src/images ./build/",
    "copy-entitlements": "cp entitlements.mac.plist build/",
    "clean": "rimraf build/* dist/*",
    "build-frontend": "cd ../frontend && npm run build && cp -R build/* ../backend/build",
    "build-backend": "electron-builder -lwm",
    "compile": "tsc",
    "electron": "cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "test": "NODE_ENV=test jest",
    "start": "DEBUG_COLORS=1 FORCE_COLOR=1 run-p watch-*",
    "postinstall": "electron-builder install-app-deps",
    "watch-build": "tsc --watch",
    "watch-electron": "onchange -i -k 'build/**/*' -- npm run electron",
    "watch-images": "onchange -i -k 'src/images/**/*' -- npm run copy-images",
    "test-watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "@types/auto-launch": "5.0.1",
    "@types/debug": "4.1.4",
    "@types/electron": "1.6.10",
    "@types/express": "4.17.0",
    "@types/http-proxy": "1.17.0",
    "@types/jest": "24.0.15",
    "@types/node": "12.6.4",
    "@types/socket.io": "2.1.2",
    "@types/universal-analytics": "0.4.2",
    "cross-env": "5.2.0",
    "electron": "^5.0.11",
    "electron-builder": "21.2.0",
    "electron-notarize": "0.1.1",
    "electron-osx-sign": "0.4.14",
    "fsevents": "2.0.7",
    "jest": "24.8.0",
    "npm-run-all": "4.1.5",
    "onchange": "6.0.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "airbrake-js": "1.6.8",
    "auto-launch": "5.0.5",
    "axios": "0.19.0",
    "chokidar": "3.0.2",
    "cross-fetch": "3.0.4",
    "debug": "4.1.1",
    "detect-rpi": "^1.3.0",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "http-proxy": "1.17.0",
    "netmask": "^1.0.6",
    "network": "^0.4.1",
    "portfinder": "1.0.21",
    "remote.it": "0.37.0",
    "socket.io": "2.2.0",
    "socketio-auth": "^0.1.1",
    "sudo-prompt": "9.0.0",
    "universal-analytics": "0.4.20",
    "winston": "3.2.1"
  },
  "homepage": "https://remote.it",
  "repository": {
    "url": "git+ssh://git@github.com/remoteit/desktop.git",
    "type": "git"
  },
  "license": "MIT",
  "author": {
    "name": "remote.it",
    "email": "support@remote.it"
  },
  "build": {
    "appId": "it.remote.desktop",
    "afterSign": "scripts/notarize.js",
    "copyright": "remot3.it, Inc",
    "productName": "remoteit-app",
    "artifactName": "${productName}-${version}.${ext}",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "shortcutName": "remote.it"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "armv7l"
          ]
        }
      ]
    },
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "../frontend/build/**/*"
    ]
  }
}
