{
  "name": "remote.it",
  "version": "1.0.0",
  "private": true,
  "main": "build/backend.js",
  "scripts": {
    "build": "npm-run-all -s clean compile build-frontend",
    "clean": "rimraf build dist",
    "build-frontend": "cd ../frontend && npm run build && cp -R build/* ../backend/build",
    "compile": "tsc",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "electron": "cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "start": "npm-run-all -p watch-*",
    "postinstall": "electron-builder install-app-deps",
    "watch-build": "tsc --watch",
    "watch-electron": "DEBUG=r3* onchange -i -k 'build/**/*' -- npm run electron"
  },
  "devDependencies": {
    "@types/debug": "4.1.4",
    "@types/electron": "1.6.10",
    "@types/express": "4.16.1",
    "@types/node": "11.13.4",
    "@types/socket.io": "2.1.2",
    "cross-env": "5.2.0",
    "electron": "4.1.4",
    "electron-builder": "20.39.0",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "dependencies": {
    "axios": "0.18.0",
    "chokidar": "2.1.5",
    "debug": "4.1.1",
    "express": "4.16.4",
    "socket.io": "2.2.0"
  },
  "build": {
    "appId": "com.remoteit.desktop",
    "copyright": "remot3.it, Inc",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "../frontend/build/**/*"
    ]
  }
}
